@page
@model api_flms_service.Pages.Authors.SeeAuthorModel

@{
    ViewData["Title"] = Model.Author.Name;
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        font-family: 'Poppins', sans-serif;
    }

    /* Author Card */
    .author-card {
        background: #fff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .author-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

        .author-card img {
            border: 4px solid #ff6b6b;
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

        .author-card:hover img {
            transform: scale(1.05);
        }

        .author-card h1 {
            color: #ff6b6b;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        .author-card p {
            color: #2c3e50;
        }

    /* Books Section */
    .book-card {
        background: #fff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

        .book-card img {
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

        .book-card:hover img {
            transform: scale(1.05);
        }

        .book-card h5 {
            color: #2c3e50;
            font-weight: bold;
        }

        .book-card p {
            color: #2c3e50;
        }

    /* Section Title */
    .section-title {
        color: #2c3e50;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        animation: fadeInDown 1s ease-in-out;
    }

    /* Animation */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in-up {
        animation: fadeInUp 1s ease-in-out;
    }
</style>

<!-- Author Details -->
<div class="container fade-in-up">
    <div class="author-card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.Author.CloudinaryId))
                {
                    <img src="https://res.cloudinary.com/dtlmurwxe/image/upload/@Model.Author.CloudinaryId" class="img-fluid" alt="@Model.Author.Name">
                }
                else
                {
                    <img src="https://via.placeholder.com/200" class="img-fluid" alt="No Image">
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h1 class="card-title">@Model.Author.Name</h1>
                    <p class="card-text"><strong>Country of Origin:</strong> @Model.Author.CountryOfOrigin</p>
                    <p class="card-text"><strong>Biography:</strong> @Model.Author.Biography</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Books Section -->
<div class="container fade-in-up">
    <h1 class="display-4 fw-bold text-center section-title">Books by @Model.Author.Name</h1>
    <hr class="featurette-divider mb-4" style="border-color: #ff6b6b;">

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">
        @foreach (var item in Model.Author.Books)
        {
            <div class="col d-flex justify-content-center">
                <div class="book-card text-center" style="width:19rem; padding:10px; border-radius:20px">
                    <a href="/Books/ShowBook?id=@(item.BookId)" style="text-decoration:none">
                        <img src="@item.CloudinaryImageId" class="card-img-top" style="border-radius:20px" alt="@item.Title">
                        <div class="card-body">
                            <h5 class="card-title" style="font-family:sans-serif; color:black">@item.Title</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Author: @item.Author?.Name</li>
                                <li class="list-group-item">Year of publication: @item.PublicationYear</li>
                            </ul>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>