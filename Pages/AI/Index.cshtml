@page
@model api_flms_service.Pages.AI.IndexModel


@{
    Layout = "_Layout";
    ViewData["Title"] = "Chat AI";
}



<!-- Bootstrap 5 CDN (nâng cấp từ 4.5.2 lên phiên bản mới hơn) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .chat-wrapper {
        max-width: 800px;
        margin: 0 auto;
        border-radius: 15px;
        padding: 20px;
        background: linear-gradient(135deg, #ffffff, #f8f9fa);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        height: 85vh;
        transition: all 0.3s ease;
    }

    .chat-header {
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
        margin-bottom: 15px;
    }

    #chat-box {
        flex: 1;
        overflow-y: auto;
        padding: 10px;
        scrollbar-width: thin;
        scrollbar-color: #888 #f1f1f1;
    }

        #chat-box::-webkit-scrollbar {
            width: 6px;
        }

        #chat-box::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 3px;
        }

        #chat-box::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

    .message {
        margin: 8px 0;
        padding: 12px 18px;
        border-radius: 20px;
        max-width: 75%;
        word-wrap: break-word;
        position: relative;
        animation: slideIn 0.2s ease-out;
    }

    .user-message {
        background: linear-gradient(90deg, #007bff, #00b4ff);
        color: white;
        align-self: flex-end;
        margin-left: auto;
    }

    .ai-message {
        background: #e9ecef;
        color: #333;
        align-self: flex-start;
    }

    .message::after {
        content: '';
        position: absolute;
        width: 10px;
        height: 10px;
        bottom: -5px;
        transform: rotate(45deg);
    }

    .user-message::after {
        right: 10px;
        background: #007bff;
    }

    .ai-message::after {
        left: 10px;
        background: #e9ecef;
    }

    #input-area {
        display: flex;
        gap: 10px;
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    #userInput {
        flex: 1;
        border-radius: 25px;
        padding: 12px 20px;
        border: 1px solid #ddd;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
        resize: none;
        transition: border-color 0.3s ease;
    }

        #userInput:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    #sendBtn {
        border-radius: 25px;
        padding: 10px 25px;
        background: linear-gradient(90deg, #007bff, #00b4ff);
        border: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        #sendBtn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
        }

    @@keyframes slideIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="container mt-5">
    <div class="chat-wrapper">
        <div class="chat-header">
            <h3 class="text-center mb-0 fw-bold">AI Chat Assistant</h3>
        </div>
        <div id="chat-box" class="border rounded p-2"></div>
        <div id="input-area">
            <textarea id="userInput" class="form-control" rows="1" placeholder="Type your message here..."></textarea>
            <button id="sendBtn" class="btn btn-primary">Send</button>
        </div>
    </div>
</div>

<!-- Giữ nguyên phần script của bạn -->
<script>
    $(document).ready(function () {
        function appendMessage(message, sender) {
            const msgDiv = $('<div>').addClass(`message ${sender}-message`).text(message);
            $('#chat-box').append(msgDiv);
            $('#chat-box').scrollTop($('#chat-box')[0].scrollHeight);
        }

        $('#sendBtn').click(sendMessage);
        $('#userInput').keypress(function (e) {
            if (e.key === "Enter" && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        function sendMessage() {
            const text = $('#userInput').val().trim();
            if (text === "") return;

            appendMessage(text, "user");
            $('#userInput').val("");

            appendMessage("AI is typing...", "ai");

            $.ajax({
                url: '/api/AIChat/SendMessage',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ message: text }),
                success: function (data) {
                    $('.ai-message:last').remove();
                    appendMessage(data.reply || "No response from AI", "ai");
                },
                error: function () {
                    $('.ai-message:last').remove();
                    appendMessage("Error connecting to AI service", "ai");
                }
            });
        }
    });
</script>

