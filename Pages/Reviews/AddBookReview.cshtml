@page
@model api_flms_service.Pages.Reviews.AddModel
@{
    ViewData["Title"] = "Add Review";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container">
    <h4 class="text-center">Add Review</h4>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-antiforgery="true" />
        <div class="form-group">
            <label asp-for="Review.BookId">Book ID</label>
            <input type="number" class="form-control" asp-for="Review.BookId" required />
            <span asp-validation-for="Review.BookId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Review.UserId">User ID</label>
            <input type="number" class="form-control" asp-for="Review.UserId" required />
            <span asp-validation-for="Review.UserId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Review.Rating">Rating (1-5)</label>
            <input type="number" class="form-control" asp-for="Review.Rating" min="1" max="5" required />
            <span asp-validation-for="Review.Rating" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Review.ReviewText">Review Text</label>
            <textarea class="form-control" asp-for="Review.ReviewText" rows="3"></textarea>
            <span asp-validation-for="Review.ReviewText" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Review.ReviewDate">Review Date</label>
            <input type="date" class="form-control" asp-for="Review.ReviewDate" required />
            <span asp-validation-for="Review.ReviewDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Add Review</button>
    </form>
</div>