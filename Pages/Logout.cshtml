@page
@model LogoutModel
@{
    ViewData["Title"] = "Logging Out...";
    Layout = "_Layout"; // Sử dụng layout đã cải tiến
}

<style>
    /* Container chính */
    .logout-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 160px); /* Trừ chiều cao của header và footer */
        text-align: center;
        animation: fadeInUp 1s ease-in-out;
    }

    /* Tiêu đề */
    .logout-title {
        color: #2c3e50;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        background: linear-gradient(90deg, #ff6b6b 0%, #4ecdc4 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: fadeInDown 1s ease-in-out;
    }

    /* Thông báo */
    .logout-message {
        color: #2c3e50;
        font-size: 1.2rem;
        margin-top: 20px;
        animation: fadeInUp 1s ease-in-out;
    }

    /* Spinner */
    .spinner {
        border: 4px solid rgba(0, 0, 0, 0.1);
        border-left: 4px solid #ff6b6b;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin-top: 20px;
    }

    /* Animation */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>

<div class="logout-container">
    <h2 class="logout-title">Logging out...</h2>
    <div class="spinner"></div>
    <p class="logout-message">You will be redirected shortly.</p>
</div>

<script>
    async function handleLogout() {
        try {
            await fetch(window.location.href, {
                method: "POST",
                credentials: "include"
            });

            // Redirect after 5 seconds
            setTimeout(() => {
                window.location.href = '@Model.LogoutUrl';
            }, 5000);
        } catch (error) {
            console.error("Logout failed:", error);
        }
    }

    window.onload = handleLogout;
</script>