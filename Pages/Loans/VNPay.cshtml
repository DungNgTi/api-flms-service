@page "{id:int?}"
@model api_flms_service.Pages.Loans.VNPayModel

@{
    ViewData["Title"] = "VNPay Payment";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    @if (Model.Loan != null && Model.Book != null)
    {
        <div class="row">
            <!-- Left Column - Book Details -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4>Book Details</h4>
                    </div>
                    <div class="card-body">
                        <h5>@Model.Book.Title</h5>
                        <p><strong>Author:</strong> @Model.Book.Author?.Name</p>
                        <p><strong>ISBN:</strong> @Model.Book.ISBN</p>
                        <p><strong>Publication Year:</strong> @Model.Book.PublicationYear</p>
                        <p><strong>Description:</strong> @Model.Book.BookDescription</p>

                        <!-- Image display -->
                        @if (!string.IsNullOrEmpty(Model.Book.ImageUrls))
                        {
                            <div class="mt-3">
                                <h6>Book Images:</h6>
                                @foreach (var imageUrl in Model.Book.ImageUrls.Split(','))
                                {
                                    <img src="@imageUrl" alt="Book Image" class="img-thumbnail" style="max-width: 150px; margin: 5px;" />
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column - Overdue Fee and Payment -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-warning text-white">
                        <h4>Overdue Fee Calculation</h4>
                    </div>
                    <div class="card-body">
                        @if (Model.OverdueFee > 0)
                        {
                            <p><strong>Overdue Fee:</strong> @Model.OverdueFee.ToString("C") VNĐ</p>
                        }
                        else
                        {
                            <p>The book is not overdue.</p>
                        }

                        <form id="paymentForm">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                Thanh toán qua VNPAY
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>Loan details not found.</p>
    }
</div>

<script>
    async function getClientIp() {
        try {
            const response = await fetch('https://api64.ipify.org?format=json');
            const data = await response.json();
            return data.ip;
        } catch (error) {
            console.error('Error fetching IP address:', error);
            return '8.8.8.8'; // Default fallback IP
        }
    }

    document.getElementById("paymentForm").addEventListener("submit", async function(event) {
        event.preventDefault();

        const clientIp = await getClientIp(); // Get client's IP address
        const urlParams = new URLSearchParams(window.location.search);
        const loanId = urlParams.get('Id');

        const response = await fetch(`/api/v0/Loan/pay?loanId=${loanId}&clientip=${clientIp}`, {
            method: "POST"
        });

        const data = await response.json();
        if (data.url) {
            window.location.href = data.url; // Redirect to VNPay payment page
        } else {
            alert("Error creating payment!");
        }
    });
</script>

